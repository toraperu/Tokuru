<div class="message" data-session="<%= session[:user_id] %>">
	<% send_user = User.find_by(id: message.from_id)%>
	<p class="<%= message.id %>" id="message_sender">
		<%= send_user.name %>
	</p>
	<p class="<%= message.id%>" id="message_content">
		<span class="message_content"><%= message.content %></span>
	</p>
	<!--メッセージを自分と相手の位置を右左で分ける-->
	<script>
		$(function(){
			var from_id = <%= message.from_id %>;
			var current_user_id = $(".message").data('session');
			if(from_id == current_user_id){
				$('p.' + <%= message.id %>).css({
												'text-align': 'right',
											});
				$('.message_content').css({
											'background-color': '#DEB887'
										});
			}else{
				$('p.' + <%= message.id %>).css({
												'text-align': 'left',
											});
				$('.message_content').css({
											'background-color': '#DEB887'
										});
			}
		});
	</script>
</div>


