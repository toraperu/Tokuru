<div class="myinfo-edit-container">
	<div class="row">
		<div class="col-4 offset-4">
			<h1 class="myinfo-edit-title">ユーザー情報編集</h1>
		</div>
	</div>
	<div class="myinfo-edit-body">
		<%= form_for @user do |f| %>
			<div class="row">
				<div class="col-4">
					<%= attachment_image_tag @user, :profile_image, :fill, 350, 350, format: 'jpeg', fallback: "no_image.jpg", size:'350x350', class: 'img-circle profile-thumb my-img edit-img'%>
					<%= f.attachment_field :profile_image %>
				</div>
				<div class="col-4 offset-2">
					<div class="user-edit-username">
						<%= f.label :ユーザー名 %><br>
						<%= f.text_field :name, autofocus: true, autocomplete: "" %>
					</div>
					<div class="user-edit-realname">
						<%= f.label :本名 %><br>
						<%= f.text_field :real_name, autofocus: true, autocomplete: "" %>
					</div>
					<div class="user-edit-password">
						<%= f.label :パスワード %>
						<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> characters minimum)</em>
						<% end %><br />
						<%= f.password_field :password, autocomplete: "new-password" %>
					</div>

					<div class="user-edit-password-confirm">
						<%= f.label :パスワード確認 %><br />
						<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
					</div>
				</div>
			</div>
		<% end %>
		<div class="row">
			<div class="col-4 offset-8">
	      		<%= link_to resign_path(@user.id) do %>
		        	<button class="btn btn-danger">退会する</button>
		      	<% end %>
			</div>
		</div>
	</div>
</div>