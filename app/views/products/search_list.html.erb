<div class="search-container">
	<div class="col-6 offset-3">
		<h1>検索結果一覧</h1>
		<h3>"<%= params[:search] %>"の検索結果</h3>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>商品名</th>
					<th>出品者</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
					<tr data-href="<%= user_product_path(product.user, product) %>">
						<td>
							<%= attachment_image_tag product, :jacket_image, fallback: "no_image.png", class: "img-fluid"%>
						</td>
						<td><%= product.name %></td>
						<td><%= product.user.name %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>