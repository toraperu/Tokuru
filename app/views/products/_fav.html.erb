<% if current_user.present? %>
	<% if product.favorited_by?(current_user) %>
		<%= link_to fav_products_path(product),class: "fav", remote: true do %>
			<i class="fas fa-heart" id="<%= product.id %>" aria-hidden="true" ></i><span class="favorite-count"><%= product.favorites.count %></span>
		<% end %>
	<% else %>
		<%= link_to fav_products_path(product),class: "fav", remote: true do %>
			<i class="far fa-heart" id="<%= product.id %>" aria-hidden="true" ></i><span class="favorite-count"><%= product.favorites.count %></span>
		<% end %>
	<% end %>
<% end %>