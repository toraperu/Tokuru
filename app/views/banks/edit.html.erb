<div class="container edit-bank-container">
	<div class="row">
		<div class="col-4 offset-4">
			<h1 class="edit-bank-title">振込先編集</h1>
			<%= form_for @bank, url: {action: 'update'} do |f| %>
				<div class="edit-bank-field">
					<%= f.label :銀行名 %><br>
					<%= f.select :name, Bank.names.map{|k, v| [Bank.names_i18n[k],k]} %>
				</div><br>
				<div class="edit-bank-field">
					<%= f.label :支店名 %><br>
					<%= f.text_field :branch %>
				</div><br>
				<div class="edit-bank-field">
					<%= f.label :口座番号 %><br>
					<%= f.text_field :number %>
				</div><br>
				<div class="edit-bank-action">
					<%= f.submit "振込先変更", class:"btn btn-secondary btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>
</div>