<div class="message-container">
	<div class="col-8 offset-2">
		<h1 class="message-title"><span class="message-user1"><%= current_user.name %></span>と<span class="message-user2"><%= @product.user.name %></span>のチャット</h1>
		<div class="message_box">
			<div id="messages">
				<%= render @room.messages %>
			</div>
		</div>
		<div class="message_form">
			<%= render 'messages/new', {from_user: current_user, to_user: @user, room_id: @room.id}%>
		</div>
		<div class="room-item">
			<div class="ok-bottun">スキル交換を望む</div>
			<% if current_user != @product.user %>
				<div class="go-order">
					<%= link_to "購入内容画面へ", new_user_product_order_path(current_user, @product), class: "btn btn-danger btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<%= javascript_include_tag "room/room", "data-turbolinks-track": "reload" %>