<div class="container admin-user-container">
	<h2>ユーザー一覧</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>名前</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% users.each do |user| %>
			<tr id="admin-user_<%= user.id %>">
				<td><%= attachment_image_tag user, :profile_image,:fill, 100, 100, fallback: "/images/no_image.png", size:'100x100', class: "img-fluid" %>
				</td>
				<td><%= user.name %></td>
				<td><%= link_to "詳細", admins_user_path(user), class: "btn btn-info btn-xs" %>
					<%= link_to "削除", admins_user_path(user), class: "btn btn-danger btn-xs", method: :delete, remote: true %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate users %>
</div>