<div class="container admin-user-container">
	<h2>商品一覧</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>商品名</th>
				<th>価格</th>
				<th>販売終了</th>
				 <th></th>
			</tr>
		</thead>
		<tbody>
			<% products.each do |product| %>
			<tr id="admin-product_<%= product.id %>">
				<td><%= attachment_image_tag product, :jacket_image,:fill, 100, 100, fallback: "/images/no_image.png", size:'100x100', class: "img-fluid" %>
				</td>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.finish %></td>
				<td><%= link_to "詳細", admins_product_path(product), class: "btn btn-info btn-xs" %>
					<%= link_to "削除", admins_product_path(product), class: "btn btn-danger btn-xs", method: :delete, remote: true %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate products %>
</div>