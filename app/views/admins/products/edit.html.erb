<div class="container edit-admin-product-container">
	<h1 class="edit-admin-product-title">＜管理者＞商品編集</h1><br>
	<%= form_for [:admins, @product] do |f| %>
		<div>
			<%= attachment_image_tag @product, :jacket_image, :fill, 300, 300, fallback: 'no_image.png', size: '300x300', class: 'img-circle' %><br><br>
			<%= f.attachment_field :jacket_image %>
		</div><br>
		<div>
			<%= f.label :商品名 %><br>
			<%= f.text_field :name, value: "#{@product.name}" %>
		</div><br>
		<div>
			<%= f.label :価格 %><br>
			<%= f.text_field :price, value: "#{@product.price}" %>
		</div><br>
		<div>
			<%= f.label :商品説明 %><br>
			<%= f.text_area :body, value: "#{@product.body}", size: '35x8'  %>
		</div><br>
		<div>
			<%= f.label :購入時の注意 %><br>
			<%= f.text_area :caution, value: "#{@product.caution}", size: '35x8'  %>
		</div><br>
		<div>
			<%= f.label :販売実績 %><br>
			<%= f.select(:sale_result, 0..300) %>
		</div><br>
		<div>
			<%= f.label :販売状況 %><br>
			<%= f.select :finish, [["販売中", false], ["販売中止", true]] %>
		</div><br>
		<div>
			<%= f.submit "編集完了", class: "btn btn-warning btn-lg" %>
		</div>
	<% end %><br>
</div><br>