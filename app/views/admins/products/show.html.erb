<div class="container admin-product-show-container">
	<div class="row">
		<div class="col-6 offset-3">
			<h1>商品情報</h1><br>
			<div><span class="bold">商品名 :</span> <%= @product.name %></div><br>
			<div><% if @product.avatar.attached? %>
					<%= image_tag @product.avatar.variant(resize: "300x300"), class: "img-fluid" %>
				<% else %>
					<%= image_tag '/images/no_image.png', size:'300x300', class: "img-fluid" %>
				<% end %>
			</div><br>
			<div><span class="bold">価格 :</span> <%= @product.price %></div><br>
			<div><span class="bold">商品説明 :</span> <%= @product.body %></div><br>
			<div><span class="bold">購入時の注意 :</span> <%= @product.caution %></div><br>
			<div><span class="bold">販売実績 :</span> <%= @product.sale_result %></div><br>
			<div><span class="bold">販売終了 :</span> <%= @product.finish %></div><br>
			<div><%= link_to "編集", edit_admins_product_path(@product), class: "btn btn-warning btn-lg" %><hr>
				<%= link_to "商品一覧", admins_products_path, class: "btn btn-success btn-lg" %><hr>
				<%= link_to "管理者トップへ", admins_admins_top_path, class: "btn btn-info btn-lg" %><hr>
			</div>
		</div>
	</div>
</div><br>